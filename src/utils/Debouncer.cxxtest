TEST(QuiesceDebouncerTest, InitState0)
{
    QuiesceDebouncer d(3);
    d.initialize(false);
    EXPECT_FALSE(d.current_state());
    EXPECT_FALSE(d.current_state());
    EXPECT_FALSE(d.current_state());
}

TEST(QuiesceDebouncerTest, InitState1)
{
    QuiesceDebouncer d(3);
    d.initialize(true);
    EXPECT_TRUE(d.current_state());
}

TEST(QuiesceDebouncerTest, Switch10AndSame)
{
