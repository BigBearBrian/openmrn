    EXPECT_TRUE(d.current_state());
    EXPECT_FALSE(d.update_state(false));
    EXPECT_FALSE(d.update_state(false));
    EXPECT_TRUE(d.update_state(false));
    EXPECT_FALSE(d.update_state(false));
    EXPECT_FALSE(d.update_state(false));
    EXPECT_FALSE(d.update_state(false));
    EXPECT_FALSE(d.update_state(false));
    EXPECT_FALSE(d.update_state(false));
    EXPECT_FALSE(d.update_state(false));
}

TEST(QuiesceDebouncerTest, Switch01AndSame)
{
