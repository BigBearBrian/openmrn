VPATH := $(SRCDIR): \
         $(SRCDIR)/common \

CSRCS += fileio.c \
         can.c \
         serial.c

CXXSRCS += 


# Find StellarisWare
ifdef STELLARISWAREPATH
include $(OPENMRNPATH)/etc/stellarisware.mk

